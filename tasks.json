      {
        "label": "launch",
        "type": "shell",
        "command": "java",
        "args": [
          "--module-path",
          "/path/to/javafx-sdk-XX/lib",
          "--add-modules",
          "javafx.controls",
          "HelloWorldApp"
        ]
      }
    ]
  }
  