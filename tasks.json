{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "run",
        "type": "shell",
        "command": "javac",
        "args": [
          "--module-path",
          "/path/to/javafx-sdk-XX/lib",
          "--add-modules",
          "javafx.controls",
          "HelloWorldApp.java"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
